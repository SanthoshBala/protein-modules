<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:tr="http://myfaces.apache.org/trinidad"
                xmlns:trh="http://myfaces.apache.org/trinidad/html">

    <tr:document>
        <trh:body>
            <tr:form id="download">
                <tr:panelHeader id="downloadAllPanel"
                                text="Download">
                </tr:panelHeader>

                <tr:panelGroupLayout>
                    <tr:messages id="errorDownloadAllMsg"/>
                </tr:panelGroupLayout>

                <tr:spacer height="20px"/>


                <tr:outputText id="selectAllFormatText" value="Select a format to export the results of the query."/>
                <tr:spacer height="20px"/>
                <tr:selectOneChoice id="downloadAllSelectOneChoice"
                                    label="Download: "
                                    value="#{downloadAllController.selectedFormat}"
                                    autoSubmit="true"
                                    required="true"
                                    valueChangeListener="#{downloadAllController.selectedFormatChanged}"
                                    unselectedLabel="Select One"
                        >
                    <f:selectItems id="downloadAllItems" value="#{downloadAllController.selectAllItems}"/>
                </tr:selectOneChoice>



                <tr:spacer height="20px"/>
                <tr:panelHorizontalLayout id="downloadHorizontalPanel">

                    <tr:commandButton id="allDownloadButton"
                                      text="Download"
                                      rendered="#{not searchBean.clusterSelected}"
                                      action="#{downloadAllController.allDownload}"
                            >
                    </tr:commandButton>

                    <tr:commandButton id="cancelButton"
                                      text="Cancel"
                                      action="#{downloadAllController.cancelDialog}"
                                      immediate="true"
                            >
                    </tr:commandButton>

                </tr:panelHorizontalLayout>
            </tr:form>
        </trh:body>
    </tr:document>
</ui:composition>
