<ui:composition
        xmlns:ui="http://java.sun.com/jsf/facelets"
        xmlns:f="http://java.sun.com/jsf/core"
        xmlns:tr="http://myfaces.apache.org/trinidad"
        xmlns:trh="http://myfaces.apache.org/trinidad/html"
        xmlns:h="http://java.sun.com/jsf/html"
        xmlns:c="http://java.sun.com/jstl/core"
        xmlns:fn="http://java.sun.com/jsp/jstl/functions"
        xmlns:sf="http://www.ebi.ac.uk/faces/site"
        xmlns:ebi="http://ebi.ac.uk/faces/components">

        <ui:component rendered="#{sf:convertToBoolean(rendered)}">

                <div id="bs_disclosed_${id}"
                     style="display:#{sf:convertToBoolean(disclosed)? 'block' : 'none'}"
                     onclick="document.getElementById('bs_content_${id}').style.display = 'none'; document.getElementById('bs_undisclosed_${id}').style.display='block'; this.style.display = 'none'; return false;">
                    <a href="#">^ #{disclosedText}</a>
                </div>
                <div id="bs_undisclosed_${id}"
                     style="display:#{sf:convertToBoolean(disclosed)? 'none' : 'block'}"
                     onclick="document.getElementById('bs_content_${id}').style.display = 'block'; document.getElementById('bs_disclosed_${id}').style.display='block'; this.style.display = 'none'; return false;">
                    <a href="#">&gt; #{undisclosedText}</a>
                </div>

                <div id="bs_content_${id}"
                     style="display:#{sf:convertToBoolean(disclosed)? 'block' : 'none'}">
                    <ui:insert/>
                </div>

            </ui:component>

</ui:composition>